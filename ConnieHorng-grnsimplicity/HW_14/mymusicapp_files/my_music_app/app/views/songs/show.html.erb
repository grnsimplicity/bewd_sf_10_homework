<div class="col-md-12">
  <div class="table-responsive">
      <h1 style="color:#666666;"> Our Cool Artists </h1>
    <table class="table table-hover">
      <!-- this is the table row with headers this is also the ability to add  text -->
      <tr>
          <th> </th>
          <th> Song </th>
      </tr>

    <tr>
      <th>Title</th>
      <th>Length</th>
      <th>Genre</th>
    </tr>
    <% @artist.songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.length %></td>
        <td><%= song.genre %></td>
      </tr>
      <% end %>
    </table>
  </div>

<%= link_to 'Reviews', song_review_path(song), class: 'btn btn-success btn-xs' %>
